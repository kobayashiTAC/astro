---
interface Props {
	name: string;
}

const { name } = Astro.props;
---
<header class="l-header">
    <div class="l-container">
        <div class="l-header_content">
            <div class="l-header_logo">
                <a href="/" class="l-header_logo_link">
                    <img src="/img/common/l-header_logo.png" class="l-header_logo_img" alt={name} width="327" height="86" />
                </a>
            </div>
            <div class="l-header_menu">
                <div class="l-header_menu_icon js-nav-trigger">
                    <span class="l-header_menu_icon_line"></span>
                    <span class="l-header_menu_icon_line"></span>
                    <span class="l-header_menu_icon_line"></span>
                </div>
            </div>
        </div>
        <nav class="l-header_nav" style="display: none;">
            <ul class="l-header_nav_list l-container">
                <li class="l-header_nav_list_item">
                    <a href="/" class="l-header_nav_list_link">TOP</a>
                </li>
                <li class="l-header_nav_list_item">
                    <a href="/privacy/" class="l-header_nav_list_link">プライバシーポリシー</a>
                </li>
                <li class="l-header_nav_list_item">
                    <a href="/terms/" class="l-header_nav_list_link">販売利用規約</a>
                </li>
                <li class="l-header_nav_list_item">
                    <a href="/tokusho/" class="l-header_nav_list_link">特定商取引法</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<script>
$(document).ready(function() {
    $(".js-nav-trigger").click(function() {
        $(this).toggleClass("-active");
        $(".l-header_nav").toggleClass("-active").slideToggle();
    });
});
</script>

<style lang="scss">
.l-header{
    background-color: #fff;
    position: sticky;
    top: 0;
    z-index: 10;
    &_content{
        padding: 8px 20px 6px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    &_logo{
        &_img{
            height: 3rem;
            width: auto;
            object-fit: contain;
        }
    }
    &_menu{
        &_icon{
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            justify-content: space-evenly;
            flex-direction: column;
            gap: 2px;
            padding: 4px;
            transition: .3s;
            &_line{
                width: 100%;
                height: 4px;
                background: var(--body-color);
                display: block;
                border-radius: 6px;
                transition: .3s;
            }
            &.-active{
                transform: rotate(180deg);
                .l-header_menu_icon_line{
                    &:nth-child(1){
                        transform: translateY(10px) rotate(45deg);
                    }
                    &:nth-child(2){
                        opacity: 0;
                    }
                    &:nth-child(3){
                        transform: translateY(-10px) rotate(-45deg);
                    }
                }
            }
        }
    }
    &_nav{
        position: absolute;
        top: 62px;
        left: 0;
        background-color: rgb(255 255 255 / 85%);
        backdrop-filter: blur(11px);
        width: 100%;
        border-radius: 0 0 15px 15px;
        border-bottom: solid 2px rgb(255 255 255 / 30%);
        border-top: solid 1px #f5f5f5;
        &.-active{
            display: flex;
        }
        &_list{
            display: flex;
            flex-direction: column;
            padding: 10px 0 5px;
            background-image: linear-gradient(0deg, transparent,#fff);
            width: 100%;
            &_item{
                &:not(:first-child){
                    .l-header_nav_list_link{
                        border-top: solid 2px rgb(255 255 255 / 40%);
                    }
                }
            }
            &_link{
                text-decoration: none;
                color: var(--body-color);
                font-weight: 600;
                display: block;
                padding: 20px 20px;
            }
        }
    }
}
</style>
